// ----------------------
// Game Account models

model GameAccount {
  id          String    @id @default(uuid())
  userId      String
  gameworldId String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  gameworld   Gameworld @relation(fields: [gameworldId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  gamePlayerId String?

  // Relations
  unitRecords GameAccountUnitRecord[]

  @@unique([userId, gameworldId])
  @@index([userId])
  @@index([gameworldId])
}

model GameAccountUnitRecord {
  id            String      @id @default(uuid())
  gameAccountId String
  gameAccount   GameAccount @relation(fields: [gameAccountId], references: [id], onDelete: Cascade)
  villageId     String
  units         Int[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([gameAccountId])
  @@index([villageId])
}
