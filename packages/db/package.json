{
	"name": "@t/db",
	"version": "1.0.0",
	"license": "ISC",
	"private": true,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"prisma": {
		"schema": "./prisma/schema"
	},
	"scripts": {
		"build": "tsc --build tsconfig.build.json",
		"clean": "rimraf dist && rimraf .cache",
		"migrate:dev": "npx prisma migrate dev --schema=./prisma/schema && yarn format",
		"migrate:deploy": "npx prisma migrate deploy --schema=./prisma/schema && yarn format",
		"prisma:generate": "prisma generate --schema=./prisma/schema",
		"format": "prisma format --schema=./prisma/schema",
		"migrate:full": "yarn migrate:dev && yarn migrate:deploy && yarn format && yarn prisma:generate",
		"reset": "rimraf ./prisma/migrations && npx prisma migrate reset --schema=./prisma/schema",
		"prisma:studio": "npx prisma studio"
	},
	"dependencies": {
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.11.1",
		"prisma": "^7.2.0",
		"rimraf": "^6.1.2",
		"typescript": "^5.9.3"
	}
}
